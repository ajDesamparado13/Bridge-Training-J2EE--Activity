<web-app>
    
    <listener>
        <listener-class>com.listeners.AppEventListeners</listener-class>
    </listener>
    
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter>
        <filter-name>RequestLogginFilter</filter-name>
        <filter-class>com.filter.RequestLoggingFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RequestLogginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.controller.LoginServlet</servlet-class>        
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.controller.LogoutServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>UsersServlet</servlet-name>
        <servlet-class>com.controller.UsersServlet</servlet-class>
    </servlet>
      
    <servlet-mapping>
        <servlet-name>UsersServlet</servlet-name>
        <url-pattern>/UserController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    
    
    <session-timeout>
        30
    </session-timeout>
    
    
</web-app>
